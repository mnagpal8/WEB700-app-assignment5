<!-- views/courses.hbs -->
<!DOCTYPE html>
<html>
<head>
    <title>Courses</title>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/theme.css">
    <style>
        /* Custom styles for table borders */
        .table-bordered-custom {
            border: 2px solid black; /* Outer border */
        }
        .table-bordered-custom th, .table-bordered-custom td {
            border: 1px solid black; /* Inner borders */
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <br>
                <h2>Courses</h2>
                <hr />

                <div class="table-responsive">
                    <table class="table table-bordered-custom">
                        <thead>
                            <tr>
                                <th>Course Code</th>
                                <th>Course Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each courses}}
                                <tr>
                                    <td><a href="/course/{{this.courseId}}">{{this.courseCode}}</a></td>
                                    <td><a href="/students?course={{this.courseId}}">{{this.courseDescription}}</a></td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                
                {{#unless courses.length}}
                <div class="col-md-12 text-center">
                    <strong>{{message}}</strong>
                </div>
                {{/unless}}
            </div>
        </div>
    </div>
</body>
</html>
