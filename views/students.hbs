<!-- views/students.hbs -->
<!DOCTYPE html>
<html>
<head>
    <title>Students</title>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/theme.css">
    <style>
        /* Custom styles for table borders */
        .table-bordered-custom {
            border: 2px solid black; /* Outer border */
        }
        .table-bordered-custom th, .table-bordered-custom td {
            border: 1px solid black; /* Inner borders */
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <br>
                <h2>Students</h2>
                <hr />

                <div class="table-responsive">
                    <table class="table table-bordered-custom">
                        <thead>
                            <tr>
                                <th>Student Num</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Status</th>
                                <th>Course ID</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each students}}
                                <tr>
                                    <td>{{this.studentNum}}</td>
                                    <td><a href="/student/{{this.studentNum}}">{{this.firstName}} {{this.lastName}}</a></td>
                                    <td><a href="mailto:{{this.email}}">{{this.email}}</a></td>
                                    <td>{{this.addressStreet}}, {{this.addressCity}}, {{this.addressProvince}}</td>
                                    <td>{{this.status}}</td>
                                    <td><a href="/students?course={{this.course}}">{{this.course}}</a></td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                
                {{#unless students.length}}
                <div class="col-md-12 text-center">
                    <strong>{{message}}</strong>
                </div>
                {{/unless}}
            </div>
        </div>
    </div>
</body>
</html>
